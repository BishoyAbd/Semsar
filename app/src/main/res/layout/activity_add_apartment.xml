<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/parentView_addApartAct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="20dp"

            >

            <ImageButton
                android:id="@+id/Ib_openGallery"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/semiTransparentWhite"
                android:src="@drawable/add_photo" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:text="اضف 5 صور" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/addApartmentInputHeght"
                android:layout_marginBottom="@dimen/searchTopMarginBetweenViews"
                android:layout_marginEnd="@dimen/layoutMarginStartEndInSearchForm"
                android:layout_marginStart="@dimen/layoutMarginStartEndInSearchForm"
                android:background="@drawable/spinner_border"
                android:gravity="center_vertical"

                >

                <TextView
                    android:id="@+id/city_tv_addApart_"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/spi"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:text="اختار المدينة"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/spi"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical|right"
                    android:src="@drawable/spinner_bg" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/addApartmentInputHeght"
                android:layout_marginBottom="@dimen/searchTopMarginBetweenViews"
                android:layout_marginEnd="@dimen/layoutMarginStartEndInSearchForm"
                android:layout_marginStart="@dimen/layoutMarginStartEndInSearchForm"
                android:background="@drawable/spinner_border"
                android:gravity="center_vertical"

                >

                <Spinner
                    android:id="@+id/gender_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@+id/spi2"
                    android:background="@android:color/transparent"
                    android:spinnerMode="dropdown"
                    android:gravity="center_vertical"
                    />

                <ImageView
                    android:id="@+id/spi2"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical|right"
                    android:src="@drawable/spinner_bg" />

            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/searchTopMarginBetweenViews"
                android:layout_marginEnd="@dimen/layoutMarginStartEndInSearchForm"
                android:layout_marginStart="@dimen/layoutMarginStartEndInSearchForm"

                android:hint="@string/address"

                >

                <EditText

                    android:id="@+id/addressEt_addApartmentAc"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/addApartmentInputHeght"
                    android:maxLines="1"
                    android:textSize="@dimen/text_view_size__small_in_apartment" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/searchTopMarginBetweenViews"
                android:layout_marginEnd="@dimen/layoutMarginStartEndInSearchForm"
                android:layout_marginStart="@dimen/layoutMarginStartEndInSearchForm"

                android:hint="عدد الغرف"

                >

                <EditText
                    android:id="@+id/numOfRoomsEt_addApartmentAc"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/addApartmentInputHeght"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:textSize="@dimen/text_view_size__small_in_apartment"

                    />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/searchTopMarginBetweenViews"
                android:layout_marginEnd="@dimen/layoutMarginStartEndInSearchForm"
                android:layout_marginStart="@dimen/layoutMarginStartEndInSearchForm"

                android:hint="@string/floor"

                >

                <EditText
                    android:id="@+id/floorEt_addApartmentAc"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/addApartmentInputHeght"
                    android:inputType="numberDecimal"

                    android:textSize="@dimen/text_view_size__small_in_apartment" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/searchTopMarginBetweenViews"
                android:layout_marginEnd="@dimen/layoutMarginStartEndInSearchForm"
                android:layout_marginStart="@dimen/layoutMarginStartEndInSearchForm"

                android:hint="@string/price"

                >

                <EditText
                    android:id="@+id/priceEt_addApartmentAc"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/addApartmentInputHeght"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/text_view_size__small_in_apartment"

                    />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/searchTopMarginBetweenViews"
                android:layout_marginEnd="@dimen/layoutMarginStartEndInSearchForm"
                android:layout_marginStart="@dimen/layoutMarginStartEndInSearchForm"


                android:hint="@string/description"

                >


                <EditText
                    android:id="@+id/descriptionEt_addApartmentAc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="5"
                    android:textSize="@dimen/text_view_size__small_in_apartment"

                    />
            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <Button
            android:id="@+id/addApartment_btn_actAdd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/layoutMarginStartEndInSearchForm"
            android:layout_marginStart="@dimen/layoutMarginStartEndInSearchForm"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_add_apartment_blue"
            android:text="@string/addApartment"
            android:textColor="@color/white" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            >

            <com.ldoublem.loadingviewlib.view.LVBlock
                android:id="@+id/loadingView_block"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone" />

        </RelativeLayout>


    </RelativeLayout>
</ScrollView>