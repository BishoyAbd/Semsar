<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/addApartment_mainActBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_auth_credentials"
        android:layout_above="@+id/openSearchDialog"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_red_semi_trannsparent"
        android:text="@string/addApartment"
        android:textColor="@drawable/text_in_login_signup_button_selector" />

    <Button
        android:id="@+id/openSearchDialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_auth_credentials"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_red_semi_trannsparent"
        android:text="@string/search"
        android:textColor="@drawable/text_in_login_signup_button_selector" />


</RelativeLayout>


